{
  "extends": "airbnb-base",
  "rules": {
    "no-restricted-syntax": "off",
    "prefer-destructuring": "warn"
  },
  "overrides": [
    {
      "files": "*.test.js",
      "env": {
        "mocha": true
      },
      "rules": {
        "prefer-arrow-callback": "off",
        "func-names": "off"
      }
    }
  ]
}
