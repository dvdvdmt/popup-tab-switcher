{
  "extends": "airbnb-base",
  "globals": {
    "E2E": "readonly",
    "window": true
  },
  "rules": {
    "no-restricted-syntax": "off",
    "prefer-destructuring": "warn"
  },
  "overrides": [
    {
      "files": "*.test.js",
      "env": {
        "mocha": true
      },
      "rules": {
        "prefer-arrow-callback": "off",
        "func-names": "off"
      }
    },
    {
      "files": "*e2e.test.js",
      "env": {
        "browser": true
      }
    },
    {
      "files": [
        "*background.js",
        "*content.js",
        "*PopupTabSwitcher.js"
      ],
      "env": {
        "browser": true,
        "webextensions": true
      }
    }
  ]
}
