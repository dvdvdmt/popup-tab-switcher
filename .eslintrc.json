{
  "extends": "airbnb-base",
  "globals": {
    "E2E": "readonly",
    "PRODUCTION": "readonly"
  },
  "rules": {
    "no-restricted-syntax": "off",
    "prefer-destructuring": "warn",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["src/**/*-test.js", "e2e/*-e2e.js"]}]
  },
  "overrides": [
    {
      "files": ["*-test.js", "*-e2e.js"],
      "env": {
        "mocha": true
      },
      "rules": {
        "prefer-arrow-callback": "off",
        "func-names": "off"
      }
    },
    {
      "files": "*-e2e.js",
      "env": {
        "browser": true
      }
    },
    {
      "files": [
        "*background.js",
        "*content.js",
        "*popup-tab-switcher.js",
        "**/settings/index.js"
      ],
      "env": {
        "browser": true,
        "webextensions": true
      }
    }
  ]
}
