{
  "name": "popup-tab-switcher",
  "version": "1.0.0",
  "description": "A browser extension that makes switching between tabs more convenient.",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvdvdmt/popup-tab-switcher.git"
  },
  "main": "index.js",
  "scripts": {
    "build:dev": "rm -rf build-dev && webpack build --env development",
    "build:e2e": "rm -rf build-e2e && webpack build --env e2e",
    "build:prod": "rm -rf build-prod && webpack build --env production && cd build-prod/ && zip -r archive.zip .",
    "clean": "rm -rf build*",
    "lint": "eslint --ext .ts,.js ./",
    "prepare": "husky install",
    "start": "webpack watch --env development",
    "test": "mocha --require @babel/register --require ts-node/register --bail ./src/**/*-test.{js,ts}",
    "test:e2e": "mocha --require @babel/register --require ts-node/register --slow 6000 ./e2e/*-e2e.ts",
    "test:e2e:ci": "npm run build:e2e && mocha --require @babel/register --require ts-node/register --slow 6000 --retries 3 ./e2e/*-e2e.ts",
    "test:e2e:mac": "PUPPETEER_EXEC_PATH='/Applications/Google Chrome.app/Contents/MacOS/Google Chrome' npm run test:e2e",
    "test:ts": "tsc --noEmit"
  },
  "keywords": [
    "extension",
    "tabs",
    "switching"
  ],
  "author": "Dmitriy Davydov",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/register": "^7.12.10",
    "@types/chrome": "^0.0.197",
    "@types/mocha": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "deepmerge": "^3.3.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "mocha": "^6.2.2",
    "prettier": "^2.4.1",
    "puppeteer": "^17.1.3",
    "sass": "^1.25.0",
    "sass-loader": "^13.0.1",
    "svg-sprite-loader": "^6.0.11",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "ts-loader": "^8.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^4.4.3",
    "vue-loader": "^15.9.8",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@types/webextension-polyfill": "^0.8.0",
    "@webcomponents/custom-elements": "^1.3.2",
    "material-components-web": "^2.3.1",
    "svg-baker-runtime": "^1.4.3",
    "vue": "^2.6.11",
    "webextension-polyfill": "^0.8.0"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{ts,js}": "eslint --cache --fix"
  }
}
