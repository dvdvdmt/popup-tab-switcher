{
  "name": "popup-tab-switcher",
  "version": "1.0.0",
  "description": "A browser extension that makes switching between tabs more convenient.",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvdvdmt/popup-tab-switcher.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "rm -rf build-prod && webpack --env.production",
    "build-e2e": "rm -rf build-e2e && webpack --env.e2e",
    "start": "rm -rf build-dev && webpack --env.development --watch",
    "test": "mocha --require @babel/register ./**/*.unit.test.js",
    "test-e2e": "npm run build-e2e && mocha ./e2e/*.e2e.test.js",
    "clean": "rm -rf build*",
    "lint": "eslint"
  },
  "keywords": [
    "extension",
    "tabs",
    "switching"
  ],
  "author": "Dmitriy Davydov",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "copy-webpack-plugin": "^4.6.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "mocha": "^6.1.4",
    "puppeteer": "^1.14.0",
    "webextension-polyfill-ts": "^0.9.0",
    "webpack": "^4.30.0",
    "webpack-chrome-extension-reloader": "^1.3.0",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {
    "webextension-polyfill": "^0.4.0"
  }
}
