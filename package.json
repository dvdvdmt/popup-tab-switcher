{
  "name": "popup-tab-switcher",
  "version": "1.0.0",
  "description": "A browser extension that makes switching between tabs more convenient.",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvdvdmt/popup-tab-switcher.git"
  },
  "main": "index.js",
  "scripts": {
    "build:dev": "rm -rf build-dev && webpack --env.development",
    "build:e2e": "rm -rf build-e2e && webpack --env.e2e",
    "build:prod": "rm -rf build-prod && webpack --env.production && cd build-prod/ && zip -r archive.zip .",
    "clean": "rm -rf build*",
    "lint": "eslint --ext .ts,.js ./",
    "prepare": "husky install",
    "start": "webpack --env.development --env.watch --watch",
    "test": "mocha --require @babel/register --require ts-node/register --bail ./src/**/*-test.js",
    "test:e2e": "npm run build:e2e && mocha --require @babel/register --require ts-node/register --slow 6000 --bail ./e2e/*-e2e.ts",
    "test:ts": "tsc --noEmit"
  },
  "keywords": [
    "extension",
    "tabs",
    "switching"
  ],
  "author": "Dmitriy Davydov",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/register": "^7.12.10",
    "@types/chrome": "0.0.95",
    "@types/mocha": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.1",
    "deepmerge": "^3.3.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "mocha": "^6.2.2",
    "prettier": "^2.4.1",
    "puppeteer": "^10.4.0",
    "sass": "^1.25.0",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.23.1",
    "svg-sprite-loader": "^6.0.11",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "ts-loader": "^8.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^4.4.3",
    "vue-loader": "^15.9.8",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^5.59.1",
    "webpack-chrome-extension-reloader": "^1.3.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "@types/webextension-polyfill": "^0.8.0",
    "@webcomponents/custom-elements": "^1.3.2",
    "material-components-web": "^2.3.1",
    "svg-baker-runtime": "^1.4.3",
    "vue": "^2.6.11",
    "webextension-polyfill": "^0.8.0"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{ts,js}": "eslint --cache --fix"
  }
}
